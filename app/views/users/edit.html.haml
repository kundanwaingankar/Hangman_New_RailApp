=form_for(@users) do |f|
  .errors
    -if @users.errors.any?
      %p An error occurred
    -@users.errors.full_messages.each do |msg|
      %li= msg
  .name
    =f.label :User_name
    =f.text_field :user_name
  .password
    =f.label :password
    =f.password_field :password
  .profile
    =f.fields_for :profile do |profile_attributes|
      .firstName
      =profile_attributes.label :first_name
      =profile_attributes.text_field :first_name
      .lastName
      =profile_attributes.label :last_name
      =profile_attributes.text_field :last_name
      .email
      =profile_attributes.label :email
      =profile_attributes.text_field :email
      .gender
      =profile_attributes.label :gender
      %br
      =profile_attributes.label :gender_true , "Male"
      =profile_attributes.radio_button :gender, true, :checked => true
      =profile_attributes.label :gender_false, "Female"
      =profile_attributes.radio_button :gender, false
  =f.submit

= link_to 'Back', users_path
